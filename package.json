{
	"name": "darkit",
	"displayName": "Darkit",
	"description": "A dark theme.",
	"type": "module",
	"publisher": "mrheio",
	"version": "14.0.0",
	"icon": "icon.png",
	"engines": {
		"vscode": "^1.7.0"
	},
	"categories": [
		"Themes"
	],
	"contributes": {
		"themes": [
			{
				"label": "Darkit",
				"uiTheme": "vs-dark",
				"path": "./themes/Darkit-color-theme.json"
			},
			{
				"label": "Darkit Atomic",
				"uiTheme": "vs-dark",
				"path": "./themes/Darkit-Atomic-color-theme.json"
			},
			{
				"label": "Darkit Astral",
				"uiTheme": "vs-dark",
				"path": "./themes/Darkit-Astral-color-theme.json"
			},
			{
				"label": "Darkit Malakai",
				"uiTheme": "vs-dark",
				"path": "./themes/Darkit-Malakai-color-theme.json"
			},
			{
				"label": "Darkit Old",
				"uiTheme": "vs-dark",
				"path": "./themes/Darkit-Old-color-theme.json"
			}
		]
	},
	"scripts": {
		"start": "nodemon ./src/build.js",
		"build": "node ./src/build.js",
		"prepare": "husky install"
	},
	"nodemonConfig": {
		"ignore": [
			"themes/*.json"
		]
	},
	"dependencies": {
		"color": "^4.2.3"
	},
	"devDependencies": {
		"husky": "^8.0.3",
		"lint-staged": "^13.2.2",
		"nodemon": "^2.0.19",
		"prettier": "2.8.8"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/mrheio/darkit"
	},
	"lint-staged": {
		"*.{js,css,md}": "prettier --write"
	}
}
