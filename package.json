{
	"name": "darkit",
	"displayName": "Darkit",
	"description": "A dark theme.",
	"type": "module",
	"publisher": "mrheio",
	"version": "19.0.2",
	"icon": "icon.png",
	"engines": {
		"vscode": "^1.7.0"
	},
	"categories": [
		"Themes"
	],
	"contributes": {
		"themes": [
			{
				"label": "Darkit",
				"uiTheme": "vs-dark",
				"path": "./themes/Darkit.json"
			},
			{
				"label": "Darkit Astral",
				"uiTheme": "vs-dark",
				"path": "./themes/Darkit-Astral.json"
			}
		]
	},
	"scripts": {
		"dev": "nodemon ./src/build.js",
		"build": "node ./src/build.js",
		"prepare": "husky install",
		"lint:fix": "eslint --fix"
	},
	"devDependencies": {
		"@stylistic/eslint-plugin-js": "^1.5.1",
		"color": "^4.2.3",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"husky": "^8.0.3",
		"lint-staged": "^13.2.2",
		"nodemon": "^2.0.19",
		"prettier": "2.8.8"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/mrheio/vsc-theme-darkit"
	},
	"lint-staged": {
		"*.{js,css,md}": "prettier --write"
	},
	"nodemonConfig": {
		"ignore": [
			"themes/*.json"
		]
	}
}
